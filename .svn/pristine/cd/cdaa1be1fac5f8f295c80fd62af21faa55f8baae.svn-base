<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Popup Demo</title>
    <link rel="stylesheet" type="text/css" href="../lib/EzServerClient.min.css">
    <link rel="stylesheet" type="text/css" href="popup.css">
    <script type="text/javascript" src="../lib/EzMapAPI.js"></script>
    <script type="text/javascript" src="../lib/EzServerClient.min.js"></script>
    <style type="text/css">
    body {
        padding: 5;
        font-family: 微软雅黑;
    }
    
    p,
    pre {
        margin: 0;
        border: 0;
    }
    
    .start-up-code {
        padding-left: 15px;
        padding-top: 15px;
        padding-bottom: 15px;
        width: 80%;
        margin: 0 auto;
    }
    
    .start-up-code > p {
        background-color: #E18728;
        padding-left: 10px;
        font-size: 18px;
        font-weight: bold;
        line-height: 2;
        color: white;
    }
    
    .start-up-code > pre {
        padding-left: 5px;
        box-sizing: border-box;
        -moz-box-sizing: border-box;
        webkit-box-sizing: border-box;
        display: block;
        white-space: pre-wrap;
        white-space: -moz-pre-wrap;
        white-space: -pre-wrap;
        white-space: -o-pre-wrap;
        word-wrap: break-word;
        width: 100%;
        overflow-x: auto;
        background-color: #1D1F21;
        color: #FFF;
        line-height: 1.5;
        font-size: 16px;
        letter-spacing: 1px;
        font-family: "Times New Roman", Times, serif;
    }
    </style>
</head>

<body>
    <div id="map" style="padding: 10px; border: 1px solid blue; width: 80%; height: 350px;margin: 0 auto;"></div>
    <br />
    <hr width="80%" />
    <div class="start-up-code">
        <P>HTML</P>
        <pre>
			<code>
&lt;!-- body部分,部署以及加载查看起步 --&gt;
&lt;div id="map" style="padding: 10px; border: 1px solid blue; width: 80%; height: 350px;"&gt;&lt;/div&gt;
&lt;script type="text/javascript"&gt;
	var map = new EzMap('map');
	
	/**
	 * 通过map对象打开popup
	 */
	var position1 = new EzCoord(115.64765,39.94921);
	var strHtml1 = "&lt;p&gt;我是通过map对象打开的popup&lt;/p&gt;";
	map.openInfoWindow(strHtml1,position1);

	/**
	 * 通过矢量要素对象打开popup
	 */
	var coordinates = '116.34765,39.94921,116.55,39.94921,116.44,39.76';
	var position2 = new EzCoord(116.34765,39.94921);
	var polygonOfEz = new Ez.g.Polygon(coordinates,{
		'strokeColor' : '#AC2222',
		'opacity' : 0.6,
		'strokeWeight' : 1,
		'strokeLineDash': [8,1,8],
		'fillColor' : '#EE0C0C',
	});	
	var strHtml2 = "&lt;p&gt;我是通过矢量要素对象打开的popup&lt;/p&gt;";
	map.addOverlay(polygonOfEz);
	polygonOfEz.openInfoWindow(strHtml2,position2);

	/**
	 * 通过marker对象打开popup
	 */
	var position3 = new EzCoord(116.84765,39.94921);
	var marker = new EzMarker(position3);
	map.addOverlay(marker);
	var strHtml3 = "&lt;p&gt;我是通过marker对象打开的popup&lt;/p&gt;";
	marker.openInfoWindow(strHtml3);
&lt;/script&gt;
			</code>
		</pre>
    </div>
    <script type="text/javascript">
    var map = new EzMap('map');

    /**
     * 通过map对象打开popup
     */
    var position1 = new EzCoord(115.64765, 39.94921);
    var strHtml1 = "<p>我是通过map对象打开的popup</p>";
    map.openInfoWindow(strHtml1, position1);

    /**
     * 通过矢量要素对象打开popup
     */
    var coordinates = '116.34765,39.94921,116.55,39.94921,116.44,39.76';
    var position2 = new EzCoord(116.34765, 39.94921);
    var polygonOfEz = new Ez.g.Polygon(coordinates, {
        'strokeColor': '#AC2222',
        'opacity': 0.6,
        'strokeWeight': 1,
        'strokeLineDash': [8, 1, 8],
        'fillColor': '#EE0C0C',
    });
    var strHtml2 = "<p>我是通过矢量要素对象打开的popup</p>";
    map.addOverlay(polygonOfEz);
    polygonOfEz.openInfoWindow(strHtml2, position2);

    /**
     * 通过marker对象打开popup
     */
    var position3 = new EzCoord(116.84765, 39.94921);
    var marker = new EzMarker(position3);
    map.addOverlay(marker);
    var strHtml3 = "<p>我是通过marker对象打开的popup</p>";
    marker.openInfoWindow(strHtml3);
    </script>
</body>

</html>
