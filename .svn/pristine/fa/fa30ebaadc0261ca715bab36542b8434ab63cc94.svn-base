.ez-custom-overview button:hover {
    background: transparent;
    background: rgba(226, 226, 226, .6);
}

.ez-custom-overview button:active {
    background: transparent;
    background: rgba(226, 226, 226, .6);
}

.ez-custom-overview button:focus {
    background: transparent;
    background: rgba(226, 226, 226, .6);
    outline: none;
}

.ez-custom-overview:not(.ol-collapsed) button {
    bottom: 1px;
    left: auto;
    right: 1px;
    top: auto;
    background: transparent;
    background: rgba(226, 226, 226, .3);
    color: #000;
    font-size: 1.375em;
}
